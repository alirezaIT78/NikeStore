<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feucher.comment.CommentActivity"
    android:textDirection="rtl"
    android:layoutDirection="rtl">
<com.google.android.material.appbar.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="52sp"
        android:background="?colorSurface"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="16sp"
            android:id="@+id/btn_backComment"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?textAppearanceHeadline6"
            android:text="@string/userComment"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="48sp"/>
    </FrameLayout>

</com.google.android.material.appbar.AppBarLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:layout_marginStart="8sp"
        android:layout_marginEnd="8sp"
        android:id="@+id/recycler_allComment"/>
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="?colorPrimary"
        android:layout_marginEnd="16sp"
        android:layout_marginBottom="16sp"
        android:layout_gravity="bottom|end"
        android:id="@+id/floatAddComment"
        app:fabSize="normal"
        app:icon="@drawable/baseline_add_comment_24"
        app:iconTint="?colorSurface"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>