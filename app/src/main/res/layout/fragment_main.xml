<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="rtl"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="56sp"
        android:id="@+id/img_logo"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_nike_logo"
        />
    <EditText

        android:layout_width="match_parent"
        android:layout_height="46sp"
        android:background="@drawable/et_search_background"
        android:layout_marginStart="16sp"
        android:layout_marginEnd="16sp"
        android:textColor="?colorOnSurface"
        android:paddingStart="12sp"
        android:paddingEnd="12sp"
        android:gravity="start|center_vertical"
        android:textColorHint="?android:textColorSecondary"
        android:drawablePadding="4sp"
        android:drawableStart="@drawable/ic_search"
        android:hint="@string/et_search"
        android:textAppearance="?textAppearanceBody1"
        android:id="@+id/et_search"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_search"
        android:layout_marginStart="8sp"
        android:layout_marginTop="8sp"
        android:visibility="gone"/>
</LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollMain"
        android:layout_marginTop="107sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_marginTop="8sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.viewpager2.widget.ViewPager2
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/viewPagerMain"
                    android:layout_marginTop="12sp"
                    />
                <com.google.android.material.tabs.TabLayout
                    android:layout_width="match_parent"
                    android:layout_height="4sp"
                    android:id="@+id/tab_layout_main"
                    android:layout_gravity="bottom|center_vertical"
                    android:layout_marginStart="16sp"
                    android:layout_marginEnd="16sp"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp">
                <TextView
                    android:id="@+id/txt_stable_latestProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:textAppearance="?textAppearanceBody1"
                    android:text="@string/latest_product"
                    android:textColor="?android:textColorSecondary"
                    android:layout_marginStart="16sp"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    style="@style/matrieal_buttom"
                    android:id="@+id/btnViewMoreLatest"
                    android:text="@string/view_more"
                    android:textAppearance="?textAppearanceBody1"
                    android:layout_marginEnd="16sp"/>

            </FrameLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_main_latest"
                android:orientation="horizontal"
                android:paddingStart="12sp"
                android:paddingEnd="12sp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp">
                <TextView
                    android:id="@+id/txt_stable_popProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:textAppearance="?textAppearanceBody1"
                    android:text="@string/popularProduct"
                    android:textColor="?android:textColorSecondary"
                    android:layout_marginStart="16sp"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    style="@style/matrieal_buttom"
                    android:text="@string/view_more"
                    android:textAppearance="?textAppearanceBody1"
                    android:layout_marginEnd="16sp"
                    android:id="@+id/btnViewMorePop"
                    />
            </FrameLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_main_pop"
                android:orientation="horizontal"
                android:paddingStart="12sp"
                android:paddingEnd="12sp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceHeadline6"
        android:layout_gravity="center"
        android:id="@+id/btn_loadAgain"
        android:text="@string/tryAgain"
        android:visibility="gone"
        app:rippleColor="@color/blue"
        tools:visibility="visible"
        app:iconGravity="textStart"
        app:icon="@drawable/baseline_refresh_24"
        />
</androidx.coordinatorlayout.widget.CoordinatorLayout>