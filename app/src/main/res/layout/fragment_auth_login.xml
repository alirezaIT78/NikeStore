<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">
    <ImageView
        android:layout_width="100sp"
        android:layout_height="60sp"
        android:src="@drawable/ic_nike_logo"
        app:tint="@color/white"
        />
    <TextView
        android:layout_marginTop="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceHeadline5"
        android:text="@string/loginToAccount"/>
    <TextView
        android:layout_marginTop="8sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceBody1"
        android:text="@string/enter_email_pass"
        android:alpha="0.8"/>
    <EditText
        android:id="@+id/et_login"
        android:layout_width="@dimen/itemAuthWight"
        android:layout_height="wrap_content"
        android:background="@drawable/auth_back_edit"
        style="@style/Theme.auth.Edit"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:gravity="right|center_vertical"
        android:layout_marginTop="16sp"
        tools:ignore="RtlHardcoded" />
    <EditText
        android:id="@+id/et_password"
        android:layout_width="@dimen/itemAuthWight"
        android:layout_height="wrap_content"
        style="@style/Theme.auth.Edit"
        android:background="@drawable/auth_back_edit"
        android:gravity="right|center_vertical"
        android:layout_marginTop="12sp"
        android:hint="@string/pass"
        android:inputType="textPassword"
        tools:ignore="RtlHardcoded" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login"
        android:layout_width="@dimen/itemAuthWight"
        android:layout_height="wrap_content"
        style="@style/Theme.auth.BtnLogin"
        android:layout_marginTop="16sp"
        android:text="@string/login"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceBody1"
        android:text="@string/notSighUp"
        android:layout_marginTop="32sp"
        android:alpha="0.4"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_loginToSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/matrieal_buttom"
        android:text="@string/singUp"
        android:textAppearance="?textAppearanceBody1"
        />
</LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>